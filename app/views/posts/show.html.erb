<p style="color: green"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<div id="comments">
  <h1>Comments</h1>
  <% @post.comments.each do |comment| %>
    <div>
      <strong><%= comment.name %> says:</strong>
      <%= comment.content %>
    </div>
  <% end %>
</div>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= link_to 'Back', posts_path %>